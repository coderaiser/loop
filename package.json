{
  "name": "loop",
  "private": true,
  "version": "1.2.0",
  "description": "Create or resize file system of an image file to use as a loop device",
  "bin": "loop.sh",
  "repository": {
    "type": "git",
    "url": "git://github.com/coderaiser/loop.git"
  },
  "scripts": {
    "start": "./lib/loop.sh",
    "lint": "shellcheck lib/*.sh",
    "docker:build": "docker build . -t coderaiser/loop:`version`",
    "docker:push": "docker push coderaiser/loop:`version`",
    "build": "redrun docker:build",
    "build:all": "redrun docker:*",
    "wisdom": "npm run build:all",
    "prewisdom": "rm -f package-lock.json",
    "watcher": "nodemon -w . -e sh --exec",
    "watch:lint": "npm run watcher -- 'npm run lint'"
  },
  "keywords": [],
  "author": "coderaiser",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^1.11.0",
    "redrun": "^5.9.14",
    "version-io": "^2.0.1"
  }
}
